<div class="col">
    <div class="card rounded-3">
        <div class="card-header py-3">
            <h4>@SuperHero.FirstName @SuperHero.LastName</h4>
        </div>
    </div>
    <div class="card-body text-center">
        <div class="mb-3">
            <img src="@($"https://gillcleerenpluralsight.blob.core.windows.net/person/{SuperHero.Id}.jpg")" class="img-fluid rounded-circle" alt="" />
        </div>
        <a href="@($"superhero/superherodetail/{SuperHero.Id}")" class="btn btn-outline-primary btn-sm mb1">Full Details</a>
        <button class="btn btn-primary btn-sm mb1" onclick="@(async () => await SuperHeroQuickViewClicked.InvokeAsync(SuperHero))">Quick View</button>
    </div>
</div>