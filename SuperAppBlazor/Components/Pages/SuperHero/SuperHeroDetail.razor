@page "/SuperHero/SuperHeroDetail/{SuperHeroId:int}"

@rendermode InteractiveServer
<section class="employee-detail">
    <h1 class="page-title">
        Details for @SuperHero.FirstName @SuperHero.LastName
    </h1>
    <br />
    <div class="col-12 row">
        <div class="col-2 text-center">
            <img src="@($"https://gillcleerenpluralsight.blob.core.windows.net/person/{SuperHero.Id}.jpg")" class="img-fluid rounded-circle employee-detail-img" />
            
            @if (SuperHero.IsActive)
            {
                <div>
                    <span class="badge bg-primary text-wrap" style="width: 6rem;">
                        Is On Mission
                    </span>
                </div>
            }
            else
            {
                <div>
                    <span class="badge bg-secondary text-wrap" style="width: 6rem;">
                        Is In Vacation
                    </span>
                </div>
            }
            
            <div class="mt-2">
                <button type="button" class="btn btn-outline-primary me1" onclick="@ChangeStateOfActivity">
                    Mudar status de atividade
                </button>
            </div>
        </div>
        <div class="col-10 row">
            <div class="col-12 col-xxl-8">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Super Hero ID</label>
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@SuperHero.Id</label>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Primeiro Nome</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@SuperHero.FirstName</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Ultimo Nome</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@SuperHero.LastName</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Poder</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@SuperHero.Power</label>
                    </div>
                </div>

            </div>
        </div>
        
        <div class="row">
            <button class="btn btn-primary btn-sm mb1" onclick="@OnDeleteHandling">Delete</button>
        </div>
    </div>
</section>