@page "/SuperHero/SuperHeroOverview"
@rendermode InteractiveServer

<PageTitle>@Title</PageTitle>

@if (SuperHeroes == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <NavLink class="btn btn-secondary" href="/superhero/superheroinsert">Inserir Novo</NavLink>
    </div>
    <QuickViewPopup SuperHero="_selectedSuperHero"></QuickViewPopup>
    <div class="row">
        @foreach (var superHero in SuperHeroes)
        {
            <ErrorBoundary>
                <ChildContent>
                    <div class="col-6 col-lg-4 col-xl-3 col-xxl-3">
                        <SuperHeroCard SuperHero="superHero" SuperHeroQuickViewClicked="ShowQuickViewPopup"></SuperHeroCard>
                    </div>
                </ChildContent>
                <ErrorContent>
                    <p class="errorUI">Super Heroi Inv√°lido!</p>
                </ErrorContent>
            </ErrorBoundary>
        }
    </div>
}
    
